@model DIY_v2.Models.CVMQueryTasker
@using System;
@using System.Threading.Tasks;
@using PagedList
@using PagedList.Mvc
@{
    ViewBag.Title = "找師傅";
}


@*裝飾用背景圖*@
@*<div><img src="~/Images/TaskerImages/living room.jpg" alt="Alternate Text" /></div>*@

@using (Html.BeginForm("Tasker", "Tasker", FormMethod.Get))
{
    <section class="ftco-section bg-light">
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-lg-9 order-md-last">
                    <div class="row">

                        @*右側主畫面*@
                        @foreach (var item in Model.taskers)
                        {
                            @*頭像*@
                            string path = "../Images/TaskerImages/" + item.TaskerImage;
                            <div class="col-sm-12 col-md-12 col-lg-4 ftco-animate d-flex">
                                @*圖片尺寸大小要統一 寬800 高1200 png*@
                                <div class="product d-flex flex-column">
                                    @*<a href="@Url.Action("TaskerDetail")?TaskerID=@item.TaskerID" class="img-prod">*@
                                    <div class="img-prod">
                                        <img class="img-fluid" src="@path" alt="Alternate Text" />
                                        <div class="overlay"></div>
                                    </div>
                                    @*</a>*@

                                    @*文字描述*@
                                    <div class="text py-3 pb-4 px-3">
                                        <div class="d-flex">
                                            <div class="cat">
                                                @*評價星星*@
                                                <span>商品評價</span>
                                            </div>
                                            <div class="rating">
                                                <p class="text-right mb-0">
                                                    <a href="#"><span class="ion-ios-star-outline"></span></a>
                                                    <a href="#"><span class="ion-ios-star-outline"></span></a>
                                                    <a href="#"><span class="ion-ios-star-outline"></span></a>
                                                    <a href="#"><span class="ion-ios-star-outline"></span></a>
                                                    <a href="#"><span class="ion-ios-star-outline"></span></a>
                                                </p>
                                            </div>
                                        </div>
                                        @foreach (var x in Model.taskersService.Where(x => x.TaskerID == item.TaskerID).Select(x => x.ServiceCategory))
                                        {
                                            <span><strong>@x</strong>|</span> @*服務分類*@
                                        }
                                        <div class="pricing">
                                            <p class="price"><span>$ @item.ServiceQuote NT / 趟</span></p> @*服務報價*@
                                        </div>
                                        <p>@item.ServiceArea</p> @*服務地區*@
                                        <hr />
                                        <h3>@item.TaskerName</h3> @*師傅名稱*@
                                        @{ @*判斷營業時間*@
                                        string openOrClose = "";
                                        double currentTime = DateTime.Now.TimeOfDay.TotalHours;
                                        double open = item.ServiceTime_Start.TotalHours;
                                        double close = item.ServiceTime_End.TotalHours;
                                        if (currentTime >= open && currentTime <= close)
                                        {
                                            openOrClose = "營業中";
                                        }
                                        else
                                        {
                                            openOrClose = "非營業時段";
                                        }
                                        }
                                        <p>@openOrClose</p>
                                        <p>@item.Rate ★(24)</p> @*師傅評價*@

                                        <p class="bottom-area d-flex px-3">
                                            @*服務詳情 >>> 連結到師父介紹按鈕*@
                                            <a href="@Url.Action("TaskerDetail")?TaskerID=@item.TaskerID" class="btn btn-info" , new { target="_blank" }>服務詳情</a>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>


                    @*分頁*@
                    <div class="row mt-5">
                        <div class="col text-center">
                            <div class="block-27">
                                @Html.PagedListPager(Model.taskers, page => Url.Action("Tasker", new { page, serviceArea = @Session["serviceArea"], serviceCategories = @Session["serviceCategories"], minPrice = @Session["min"], maxPrice = @Session["max"] }))
                            </div>
                        </div>
                    </div>
                </div>

                @*左側導覽列*@
                <div class="col-md-4 col-lg-2">
                    <div class="sidebar">

                        @*服務地區*@
                        <div class="sidebar-box-2">
                            <h2 class="heading">服務地區</h2>
                            <select class="form-control" name="serviceArea">
                                <option>請選擇縣市</option>
                                <option>基隆市</option>
                                <option>台北市</option>
                                <option>新北市</option>
                                <option>桃園市</option>
                                <option>新竹縣</option>
                                <option>新竹市</option>
                                <option>苗栗縣</option>
                                <option>台中市</option>
                                <option>彰化縣</option>
                                <option>南投縣</option>
                                <option>雲林縣</option>
                                <option>嘉義縣</option>
                                <option>嘉義市</option>
                                <option>台南市</option>
                                <option>高雄市</option>
                                <option>屏東縣</option>
                                <option>宜蘭縣</option>
                                <option>花蓮縣</option>
                                <option>台東縣</option>
                                <option>澎湖縣</option>
                            </select>
                        </div>

                        @*服務類別*@
                        <div class="sidebar-box-2">
                            <h2 class="heading">服務類別</h2>
                            <div class="has-success">
                                <div class="checkbox">
                                    @foreach (var item in Model.taskersService.Select(x => x.ServiceCategory).Distinct())
                                    {
                                        <input type="checkbox" id="serviceCategories @item" name="serviceCategories" value="@item" />
                                        <label for="serviceCategories @item">@item</label>
                                        <br />
                                    }
                                </div>
                            </div>
                        </div>

                        @*服務價錢*@
                        <div class="sidebar-box-2">
                            <h2 class="heading">服務價錢</h2>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="guests">最小金額</label>
                                        <div class="form-field">
                                            <input class="rangeBox form-control" type="text" placeholder="請輸入金額" name="minPrice" value="@Session["min"]" />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="guests">最大金額</label>
                                        <div class="form-field">
                                            <input class="rangeBox form-control" type="text" placeholder="請輸入金額" name="maxPrice" value="@Session["max"]" />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <div class="form-field">
                                            <input type="submit" class="btn btn-primary btn-lg btn-block" name="name" value="確認" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}